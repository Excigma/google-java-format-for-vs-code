{
    "name": "google-java-format-for-vs-code",
    "displayName": "Google Java Format for VS Code",
    "description": "Visual Studio Code extension to format Java files using google-java-format program to comply with Google Java Style.",
    "publisher": "josevseb",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Formatters"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "Google Java Format for VS Code",
                "properties": {
                    "java.format.settings.google.executable": {
                        "type": "string",
                        "markdownDescription": "Specifies url or file path to [Google Java Format jar executable](https://github.com/google/google-java-format/releases).",
                        "default": null,
                        "scope": "window"
                    },
                    "java.format.settings.google.port": {
                        "type": "number",
                        "markdownDescription": "Port for Google Java Format service. Service starts automatically if `executable` is provided. Use `0` for random port; `-1` to disable background service.",
                        "default": -1,
                        "scope": "window"
                    },
                    "java.format.settings.google.version": {
                        "type": "string",
                        "markdownDescription": "Specifies version to be used of [Google Java Format jar executable](https://github.com/google/google-java-format/releases).",
                        "default": null,
                        "scope": "window"
                    }
                }
            }
        ],
        "languages": [
            {
                "id": "java",
                "extensions": [
                    ".java"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "format": "prettier --write \"src/**/*.(ts|js)\"",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.0.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "@vscode/test-electron": "^2.2.2",
        "eslint": "^8.33.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "glob": "^8.1.0",
        "mocha": "^10.1.0",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "dependencies": {
        "node-fetch": "^3.3.0"
    }
}
